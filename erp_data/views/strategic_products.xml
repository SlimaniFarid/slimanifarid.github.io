<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="strategic_products_tree_view">
      <field name="name">strategic.products.tree.view</field>
      <field name="model">product.product</field>
      <field name="arch" type="xml">
        <tree string="Produits stratégiques">
            <field name="name"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="strategic_products_form_view">
      <field name="name">strategic.products.form.view</field>
      <field name="model">product.product</field>
      <field name="arch" type="xml">
        <form string="Produit stratégique">
          <sheet>
            <group>
              <group>
                  <field name="name"/>
              </group>
              <group>
            
              </group>
            </group>
          
          </sheet>
        </form>
      </field>
    </record>
    <record id="strategic_products_search" model="ir.ui.view">
        <field name="name">strategic.products.search</field>
        <field name="model">product.product</field>
        <field name="arch" type="xml">
            <search string="Produits stratégiques">
                <field name="name"/>
            </search>
        </field>
    </record>  

    <record model="ir.actions.act_window" id="strategic_products_action_window">
      <field name="name">Produits stratégiques</field>
      <field name="res_model">product.product</field>
      <field name="view_mode">tree,form</field>
      <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('strategic_products_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('strategic_products_form_view')})]"/>
      <field name="search_view_id" ref="strategic_products_search"/>
      <field name="context">{'default_is_strategic_product': True}</field>
      <field name="domain">[('is_strategic_product', '=', True)]</field>


    </record>

  </data>
</odoo>