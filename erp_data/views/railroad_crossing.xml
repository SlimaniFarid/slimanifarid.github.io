<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="railroad_crossing_tree_view">
      <field name="name">railroad.crossing.tree.view</field>
      <field name="model">railroad.crossing</field>
      <field name="arch" type="xml">
        <tree string="Passages à niveau">
            <field name="name"/>
            <field name="departnet_id"/>     
            <field name="res_line_id"/>       
            <field name="pk"/>                 
            <field name="observation"/> 
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="railroad_crossing_form_view">
      <field name="name">railroad.crossing.form.view</field>
      <field name="model">railroad.crossing</field>
      <field name="arch" type="xml">
        <form string="Passage à niveau">
           <sheet>
              <group>
                  <group>
                      <field name="name"/>
                      <field name="type"/>
                      <field name="departnet_id"/>     
                      <field name="res_line_id"/>       
                      <field name="pk"/>
                    
                  </group>

                  <group string=''>
                      <field name="observation"/> 
                  </group>
              </group>
            
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="railroad_crossing_action_window">
      <field name="name">Passage à niveau</field>
      <field name="res_model">railroad.crossing</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>