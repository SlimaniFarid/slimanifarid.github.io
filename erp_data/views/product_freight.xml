<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="freight_product_tree_view">
      <field name="name">freight.product.tree.view</field>
      <field name="model">product.product</field>
      <field name="arch" type="xml">
        <tree string="Produits fret">
            <field name="name"/>
            <field name="generic_code"/>
            <field name="tarpaulin_indece"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="freight_product_form_view">
      <field name="name">freight.product.form.view</field>
      <field name="model">product.product</field>
      <field name="arch" type="xml">
        <form string="Produit fret">
          <sheet>
            <group>
              <group>
                  <field name="name"/>
              </group>
              <group>
                   <field name="generic_code"/>
                   <field name="tarpaulin_indece"/>
              </group>
            </group>
          
          </sheet>
        </form>
      </field>
    </record>
    <record id="freight_product_search" model="ir.ui.view">
        <field name="name">spare.parts.search</field>
        <field name="model">product.product</field>
        <field name="arch" type="xml">
            <search string="Produit fret">
                <field name="name"/>
                <field name="generic_code"/>
            </search>
        </field>
    </record>  

    <record model="ir.actions.act_window" id="freight_product_action_window">
      <field name="name">Produits fret</field>
      <field name="res_model">product.product</field>
      <field name="view_mode">tree,form</field>
      <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('freight_product_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('freight_product_form_view')})]"/>

      <field name="search_view_id" ref="freight_product_search"/>
      <field name="context">{'default_is_freight_product': True}</field>
      <field name="domain">[('is_freight_product', '=', True)]</field>

    </record>

  </data>
</odoo>