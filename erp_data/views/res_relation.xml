<odoo>
  <data>

    <record model="ir.ui.view" id="res_relation_tree_view">
      <field name="name">res.relation.tree.view</field>
      <field name="model">res.relation</field>
      <field name="arch" type="xml">
        <tree string="Relations">
            <field name="name"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="res_relation_form_view">
      <field name="name">res.relation.form.view</field>
      <field name="model">res.relation</field>
      <field name="arch" type="xml">
        <form string="Relation">
          <sheet>
            <div name="button_box" class="oe_button_box"> 
                <button class="oe_stat_button opacity-100" icon="fa-road" > 
                  <div class="o_field_widget o_stat_info">
                      <span class="o_stat_text">Parcours(KM)</span>
                      <span class="o_stat_value"><field name="amount_distance" readonly="1" force_save="1"/></span>
                  </div>
              </button>
            </div>
            <group col="3">
              <group>
                  <field name="name"/>               
              </group>
              <group>  
                  <field name="start_station_id"/>          
              </group>
              <group>               
                  <field name="end_station_id"/>
              </group>
            </group>
            <notebook>
                <page string="Lignes">
                  <field name="relation_line_ids">
                    <tree editable="botttom">
                        <field name="sequence" widget="handle"/>
                        <field name="line_id"/>
                        <field name="distance"/>
                    </tree>
                    <form>
                      <group>
                        <group>
                            <field name="line_id" />
                        </group>  
                        <group>
                            <field name="distance"/>
                        </group>
                      </group>
                      
                    </form>
                  </field>
                </page>
                <page string="Gares">                     
                  <field name="station_line_ids">
                    <tree editable="botttom">
                        <field name="station_id"/>
                        <field name="line_id"/>
                        <field name="pk"/>
                    </tree>
                    <form>
                      <group>
                        <group>
                            <field name="station_id" />
                            <field name="line_id"/>
                        </group>  
                        <group>
                            <field name="pk"/>
                        </group>
                      </group>
                      
                    </form>
                  </field>
                </page>
            </notebook>
          </sheet>
          
        </form>
      </field>
    </record>
       
    <record id="res_relation_search" model="ir.ui.view">
        <field name="name">res.relation.search</field>
        <field name="model">res.relation</field>
        <field name="arch" type="xml">
            <search string="Relation search">
                <separator/>
                <field name="name"/>
            </search>
        </field>
    </record>
    <record model="ir.actions.act_window" id="res_relation_action_window">
        <field name="name">Relations</field>
        <field name="res_model">res.relation</field>
        <field name="view_mode">tree,form</field>
      
    </record>

  </data>
</odoo>

