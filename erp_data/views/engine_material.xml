<odoo>
  <data>
    <record model="ir.ui.view" id="engine_material_locomotive_tree_view">
      <field name="name">engine.material.locomotive.tree.view</field>
      <field name="model">engine.material</field>
      <field name="arch" type="xml">
        <tree string="Locomotives">
            <field name="name"/>
            <field name="departnet_id"/>
            <field name="serie"/>
            <field name="way" />
            <field name="state" />
            <field name="material_type" invisible="1"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="engine_material_handcar_tree_view">
      <field name="name">engine.material.handcar.tree.view</field>
      <field name="model">engine.material</field>
      <field name="arch" type="xml">
        <tree string="Draisines">
            <field name="name"/>
            <field name="departnet_id"/>
            <field name="handcar_type"  />   
            <field name="brand"/>
            <field name="acquisition_date"  />
            <field name="observation" />
            <field name="state" />
            <field name="material_type" invisible="0"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="engine_material_locomotive_form_view">
      <field name="name">engine.material.locomotive.form.view</field>
      <field name="model">engine.material</field>
      <field name="arch" type="xml">
        <form string="Locomotive">
           <sheet>
              <field name="material_type" invisible="1"/>
              <group>
                  <group>
                      <field name="name"/>
                      <field name="departnet_id"/>
                      <field name="serie"/>
                  </group>
                  <group>
                      <field name="way"/>
                      <field name="state"/>
                  </group>
              </group>
            
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="engine_material_handcar_form_view">
      <field name="name">engine.material.handcar.form.view</field>
      <field name="model">engine.material</field>
      <field name="arch" type="xml">
        <form string="Draisine">
           <sheet>
              <field name="material_type" invisible="1"/>
              <group>
                  <group>
                      <field name="name"/>
                      <field name="departnet_id"/>
                      <field name="handcar_type"  />      
                      <field name="brand"/>             
                  </group>
                  <group>
                      <field name="acquisition_date"  />
                      <field name="state"/>
                      <field name="observation"/>
                  </group>
              </group>
            
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="engine_material_locomotive_action_window">
      <field name="name">Locomotives</field>
      <field name="res_model">engine.material</field>
      <field name="view_mode">tree,form</field>
      <field name="domain">[('material_type','=','locomotive')]</field>
      <field name="context">{'default_material_type':'locomotive'}</field>
      <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('engine_material_locomotive_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('engine_material_locomotive_form_view')})]"/>

    </record>

    <record model="ir.actions.act_window" id="engine_material_handcar_action_window">
      <field name="name">Draisines</field>
      <field name="res_model">engine.material</field>
      <field name="view_mode">tree,form</field>
      <field name="domain">[('material_type','=','handcar')]</field>
      <field name="context">{'default_material_type':'handcar'}</field>
      <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('engine_material_handcar_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('engine_material_handcar_form_view')})]"/>

    </record>



  </data>
</odoo>