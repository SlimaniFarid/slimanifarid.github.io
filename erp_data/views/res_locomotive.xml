<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="res_locomotive_tree_view">
      <field name="name">res.locomotive.tree.view</field>
      <field name="model">res.locomotive</field>
      <field name="arch" type="xml">
        <tree string="Locomotives">
            <field name="name"/>
            <field name="departnet_id"/>
            <field name="serie"/>
            <field name="way"/>
            <field name="state"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="res_locomotive_form_view">
      <field name="name">res.locomotive.form.view</field>
      <field name="model">res.locomotive</field>
      <field name="arch" type="xml">
        <form string="Locomotive">
           <sheet>
              <group>
                  <group>
                      <field name="name"/>
                      <field name="departnet_id"/>
                      <field name="serie"/>
                  </group>
                  <group>
                      <field name="way"/>
                      <field name="state"/>
                  </group>
              </group>
            
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="res_locomotive_action_window">
      <field name="name">Locomotives</field>
      <field name="res_model">res.locomotive</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>