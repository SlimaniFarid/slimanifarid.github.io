<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="rail_network_tree_view">
      <field name="name">rail.network.tree.view</field>
      <field name="model">rail.network</field>
      <field name="arch" type="xml">
        <tree string="Réseau ferroviaire">
            <field name="name"/>
            <field name="company_id"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="rail_network_form_view">
      <field name="name">rail.network.form.view</field>
      <field name="model">rail.network</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group>
                  <field name="name"/>
                  <field name="company_id"/>
              </group>
              <group>
                   <button class="btn btn-link" name="action_get_graph"  colspan="2" type="object">
                        <i class="fa fa-arrow-right"></i>
                        Afficher le graph
                    </button>
              </group>
            </group>
            <notebook>
              <page string="Lignes">
                  <field name="line_ids" readonly="1"/>
              </page>
              <!-- <page string="Graphique">
                  <field name="graph_data" widget="line_graph"/>
              </page> -->
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="rail_network_action_window">
      <field name="name">Réseau ferroviaire</field>
      <field name="res_model">rail.network</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>