<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="res_line_tree_view">
      <field name="name">res.line.tree.view</field>
      <field name="model">res.line</field>
      <field name="arch" type="xml">
        <tree string="Lignes">
            <field name="name"/>
            <field name="amount_distance"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="res_line_form_view">
      <field name="name">res.line.form.view</field>
      <field name="model">res.line</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group col="3">
              <group>
                  <field name="name"/>
              </group>
              <group>
                  <field name="rail_network_id"/>
              </group>

              <group>
                  <field name="amount_distance"/>
              </group>
            </group>

           <notebook>
              <page name="stations" string="Gares">
                   <field name="station_line_ids">
                      <tree editable="botttom">
                          <field name="sequence" widget="handle"/>
                          <field name="station_id"/>
                          <field name="distance" class="distance"/>
                          <field name="cantonnement_mode"/>

                      </tree>
                      <form>
                        <group>
                          <group>
                              <field name="station_id" />
                          </group>  
                          <group>
                              <field name="distance"/>
                              <field name="cantonnement_mode"/>
                          </group>
                        </group>
                        
                      </form>
                  </field>
              </page>
             

           </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="res_line_action_window">
      <field name="name">Lignes</field>
      <field name="res_model">res.line</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>