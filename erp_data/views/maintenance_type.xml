<odoo>
  <data>

    <record model="ir.ui.view" id="maintenance_type_tree_view">
        <field name="name">maintenance_type_tree_view</field>
        <field name="model">data.maintenance_type</field>
        <field name="arch" type="xml">
            <tree string="Types de maintenance" editable="top">
                <field name="name" modifiers="{&quot;required&quot;: true}"/>
            </tree>
        </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="maintenance_type_action">
      <field name="name">Type maintenance</field>
      <field name="res_model">data.maintenance_type</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>