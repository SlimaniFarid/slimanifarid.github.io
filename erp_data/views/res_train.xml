    </record>
 
    <record id="res_train_search" model="ir.ui.view">
        <field name="name">res.train.search</field>
        <field name="model">res.train</field>
        <field name="arch" type="xml">
            <search string="Train search">
                <filter string="Trains en circulation" name="tarin_active" domain="[('state', '=', 'active')]"/>
