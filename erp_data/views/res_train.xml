<odoo>
  <data>

    <record model="ir.ui.view" id="res_train_tree_view">
      <field name="name">res.train.tree.view</field>
      <field name="model">res.train</field>
      <field name="arch" type="xml">
        <tree string="Trains">
            <field name="name"/>
            <field name="start_station_id"/>
            <field name="end_station_id"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="res_train_form_view">
      <field name="name">res.train.form.view</field>
      <field name="model">res.train</field>
      <field name="arch" type="xml">
        <form>
          <header>
               <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
          </header>
          
          <sheet>
          <div name="button_box" class="oe_button_box" > 
              <button class="oe_stat_button opacity-100" icon="fa-road" > 
                  <div class="o_field_widget o_stat_info">
                      <span class="o_stat_text">Parcours(KM)</span>
                      <span class="o_stat_value"><field name="amount_distance"  force_save="1"/></span>
                  </div>
              </button>
              <button class="oe_stat_button opacity-100" icon="fa-clock-o">
                  <div class="o_field_widget o_stat_info">
                      <strong class="o_stat_text">Temps de parcours</strong>
                      <strong class="o_stat_value"><field name="travel_time"  widget="float_time" force_save="1"/></strong>
                  </div>
              </button>  
          </div>

          <group col="3">
              <group>
                  <field name="name" default_focus="1"/>

                  <field name="train_type_id" />
                  <field name="relation_id" />
              </group>    
            
              <group>
                  <field name="departure_time" widget="float_time"/>
                  <field name="start_station_id"/>
                  <field name="start_pk"/>
              </group>
              <group>
                  <field name="arrival_time" widget="float_time"/>
                  <field name="end_station_id"/>
                  <field name="end_pk"/>
              </group>

          </group>      
          <group>
            <group>
              <field name="region_ids"  widget="many2many_tags" />
              <field name="line_ids"  widget="many2many_tags" />
            </group>    
          </group>    
