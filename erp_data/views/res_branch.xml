
<odoo>
  <data>

    <record model="ir.ui.view" id="res_branch_tree_view">
      <field name="name">res.branch.tree.view</field>
      <field name="model">res.branch</field>
      <field name="arch" type="xml">
        <tree string="Branches">
            <field name="name"/>
            <field name="code"/>
            <field name="amount_distance"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="res_branch_form_view">
      <field name="name">res.branch.form.view</field>
      <field name="model">res.branch</field>
      <field name="arch" type="xml">
        <form string="Branche">   

         <sheet>
           <div name="button_box" class="oe_button_box"> 
             
           </div>

            <div class="row">
              <div class="col-4">
               
                <h3>
                  <field name="name"  placeholder="Nom" readonly="1"/>
                </h3>  
              </div>
              <div class="col-4"> 
                <h3>   
                   <label for="code" string="Code"/>
                  <field name="code" default_focus="1" placeholder="Code"/>
                </h3>
              </div>            
              <div class="col-4"> 
                <h3>
                    <label for="amount_distance" string='Parcours(KM)'/>
                    <field name="amount_distance" />
                </h3>
              </div>            
            </div>
       
          <notebook>
                <page string="listes des gares">
                  <field name="station_line_ids">
                    <tree editable="botttom">
                        <field name="sequence" widget="handle"/>
                        <field name="station_id"/>
                        <field name="station_type"/>
                        <field name="distance" class="distance"/>
                     
                    </tree>
                    <form>
                      <group>
                        <group>
                            <field name="station_id" />
                             <field name="station_type"/>
                        </group>  
                        <group>
                            <field name="distance"/>
                         

                        </group>
                      </group>
                      
                    </form>
                  </field>
                </page>
            </notebook>
          </sheet>
      
        </form>
      </field>
    </record>
    
  <record id="res_branch_search" model="ir.ui.view">
        <field name="name">res.branch.search</field>
        <field name="model">res.branch</field>
        <field name="arch" type="xml">
            <search string="Branch search">
                <separator/>
                <field name="name"/>
                <field name="code"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="res_branch_action_window">
      <field name="name">Branches</field>
      <field name="res_model">res.branch</field>
      <field name="view_mode">tree,form</field>
      <field name="context"></field>
      <field name="domain"></field>
    </record>


  </data>
</odoo>

