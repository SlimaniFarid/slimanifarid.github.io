<odoo>
  <data>

    <record model="ir.ui.view" id="operation_type_tree_view">
        <field name="name">operation_type_tree_view</field>
        <field name="model">data.operation_type</field>
        <field name="arch" type="xml">
            <tree string="Type d'opération" editable="top">
                <field name="name" modifiers="{&quot;required&quot;: true}"/>
            </tree>
        </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="operation_type_action">
      <field name="name">Type d'opération</field>
      <field name="res_model">data.operation_type</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>